---
import BaseLayout from '../layouts/BaseLayout.astro';

// Couple's photo
const heroImage = "https://www.tessyandshizzo.com/us/tessy-yvonne-and-shizzo-ishimwe-jan-2026/photos/158230569";
---

<BaseLayout 
  title="Tessy & Shizzo Wedding - January 10th, 2026"
  description="You are warmly invited to celebrate the union of Kayitesi Yvonne (Tessy) & Ishimwe A. Shizzo on January 10th, 2026."
>
  <div class="min-h-screen relative bg-winter-dark-700">
    
    <!-- Hero Section - Botanical Style -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-winter-dark-700">
      <!-- Botanical Decorations -->
      <div class="absolute top-10 left-10 opacity-15">
        <svg class="w-48 h-48 text-winter-light-300" viewBox="0 0 200 200" fill="none" stroke="currentColor" stroke-width="0.5">
          <path d="M50,100 Q60,80 70,90 T90,100 Q95,90 100,95 L105,100 Q110,105 115,100 T130,90 Q140,80 150,100" />
          <circle cx="80" cy="85" r="12" />
          <circle cx="100" cy="95" r="8" />
          <circle cx="120" cy="85" r="10" />
          <path d="M75,90 Q70,100 75,110" />
          <path d="M100,100 Q95,110 100,120" />
          <path d="M125,90 Q120,100 125,110" />
        </svg>
      </div>
      <div class="absolute bottom-10 right-10 opacity-15">
        <svg class="w-64 h-64 text-winter-light-300" viewBox="0 0 200 200" fill="none" stroke="currentColor" stroke-width="0.5">
          <path d="M20,180 L30,140 L25,100 L35,60 L30,30" />
          <path d="M30,140 L50,145 L70,140" />
          <path d="M25,100 L45,105 L65,100" />
          <path d="M35,60 L55,65 L75,60" />
          <ellipse cx="50" cy="20" rx="25" ry="15" transform="rotate(-20 50 20)" />
        </svg>
      </div>
      
      <!-- Hero Content -->
      <div class="relative z-10 text-center text-winter-light-100 px-4 py-20">
        <h1 class="font-serif text-7xl sm:text-8xl lg:text-9xl font-light mb-8 tracking-wide">
          TESSY <span class="font-light" style="font-size: 0.7em;">&</span> SHIZZO
        </h1>
        <p class="font-serif italic text-xl sm:text-2xl mb-12 opacity-90">Uniting our two gifts of 27years</p>
        <div class="w-32 h-px bg-winter-light-300 mx-auto mb-8"></div>
        <p class="text-lg sm:text-xl mb-12 tracking-widest uppercase font-light">January 10, 2026</p>
        <a href="#details" class="inline-block border-2 border-winter-light-300 text-winter-light-100 px-12 py-3 text-sm uppercase tracking-widest hover:bg-winter-light-300 hover:text-winter-dark-700 transition-all duration-300">
          RSVP
        </a>
      </div>
    </section>
    
    <!-- Our Story Section -->
    <section class="py-24 px-4 bg-winter-light-100" id="details">
      <div class="max-w-4xl mx-auto text-center">
        <div class="mb-6">
          <svg class="w-12 h-12 mx-auto text-winter-teal-600" viewBox="0 0 50 50" fill="none" stroke="currentColor" stroke-width="0.8">
            <circle cx="25" cy="25" r="15" />
            <circle cx="25" cy="25" r="10" />
            <circle cx="25" cy="25" r="5" />
            <path d="M25,10 L25,5 M25,40 L25,45 M10,25 L5,25 M40,25 L45,25" />
          </svg>
        </div>
        <h2 class="font-serif text-4xl sm:text-5xl font-light text-winter-dark-700 mb-12 tracking-wide">How We Met</h2>
        
        <!-- Bible Verse -->
        <div class="bg-white p-10 mb-16 italic text-winter-dark-700 leading-relaxed max-w-2xl mx-auto border border-winter-gray-300">
          <p class="text-xl font-serif">
            "The man said, 'This is now bone of my bones and flesh of my flesh; she
            shall be called 'woman,' for she was taken out of man.'"
          </p>
          <small class="block mt-6 font-semibold not-italic text-winter-teal-600 tracking-wider">— GENESIS 2:23</small>
        </div>
        
        <!-- Families Introduction -->
        <div class="text-base text-winter-dark-600 leading-relaxed max-w-2xl mx-auto font-light">
          <p class="mb-8">
            The families of
            <span class="font-normal">MUKASA Joseph</span> represented by
            <span class="font-normal">RUGAMBWA Joel</span> and
            <span class="font-normal">HAKIZIMANA Alex</span> represented by
            <span class="font-normal">MAOMBI MANIRIHO Ferdinand</span> are delighted
            to invite you to the wedding ceremony of their children:
          </p>
          <p class="font-serif text-winter-dark-700 text-3xl sm:text-4xl tracking-wide">
            Kayitesi Yvonne (Tessy) & Ishimwe A. Shizzo
          </p>
        </div>
      </div>
    </section>
    
    <!-- Where & When Section -->
    <section class="py-24 px-4 bg-winter-dark-700">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <div class="mb-6">
            <svg class="w-10 h-10 mx-auto text-winter-light-300" viewBox="0 0 50 50" fill="currentColor">
              <path d="M25,5 L27,20 L25,22 L23,20 Z" />
              <circle cx="25" cy="25" r="3" />
              <path d="M25,28 L25,45" stroke="currentColor" fill="none" stroke-width="1" />
            </svg>
          </div>
          <h2 class="font-serif text-4xl sm:text-5xl font-light text-winter-light-100 mb-4 tracking-wide">Where To Stay</h2>
        </div>
        
        <div class="grid md:grid-cols-2 gap-16 items-center">
          <!-- Image Placeholder -->
          <div class="aspect-[4/5] rounded overflow-hidden relative">
            <img src="${heroImage}" alt="Venue" class="w-full h-full object-cover opacity-90 border border-winter-gray-400" />
            <div class="absolute inset-0 border-2 border-winter-light-300 m-4"></div>
          </div>
          
          <!-- Wedding Program -->
          <div>
            <h3 class="font-serif text-3xl font-light text-winter-light-100 mb-12 tracking-wide">Wedding Program</h3>
            
            <div class="space-y-8">
              <div class="border-l border-winter-gray-400 pl-8">
                <div class="font-serif text-winter-light-300 text-xl mb-3 tracking-wider">09:00 AM</div>
                <div class="text-winter-light-100 font-light text-lg mb-2">Introduction and dowry giving</div>
                <div class="text-winter-gray-300 text-sm tracking-widest uppercase">INTARE ARENA (Rusororo)</div>
              </div>
              
              <div class="border-l border-winter-gray-400 pl-8">
                <div class="font-serif text-winter-light-300 text-xl mb-3 tracking-wider">14:00 PM</div>
                <div class="text-winter-light-100 font-light text-lg mb-2">Religious wedding ceremony</div>
                <div class="text-winter-gray-300 text-sm tracking-widest uppercase">INTARE ARENA GARDEN</div>
              </div>
              
              <div class="border-l border-winter-gray-400 pl-8">
                <div class="font-serif text-winter-light-300 text-xl mb-3 tracking-wider">17:00 PM</div>
                <div class="text-winter-light-100 font-light text-lg mb-2">Guests shall be hosted</div>
                <div class="text-winter-gray-300 text-sm tracking-widest uppercase">INTARE ARENA (Rusororo)</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- How He Proposed Section -->
    <section class="py-24 px-4 bg-winter-light-100">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-16 items-center">
          <!-- Text Content -->
          <div class="order-2 md:order-1">
            <div class="mb-6">
              <svg class="w-10 h-10 text-winter-teal-600" viewBox="0 0 50 50" fill="currentColor">
                <path d="M25,10 Q15,20 25,30 Q35,20 25,10 Z" />
                <circle cx="25" cy="25" r="2" fill="white" />
              </svg>
            </div>
            <h2 class="font-serif text-4xl sm:text-5xl font-light text-winter-dark-700 mb-8 tracking-wide">How He Proposed</h2>
            <div class="text-base text-winter-dark-600 leading-relaxed space-y-6 font-light">
              <p>
                <strong class="text-winter-dark-700 font-normal">Your presence is a special blessing to us!</strong>
              </p>
              <p>
                For friends and family who cannot attend in person, you are invited to
                follow the celebration live online.
              </p>
              <a 
                href="https://www.tessyandshizzo.com"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block mt-8 border-2 border-winter-teal-600 text-winter-dark-700 px-12 py-3 text-sm uppercase tracking-widest hover:bg-winter-teal-600 hover:text-white transition-all duration-300"
              >
                Watch Online
              </a>
            </div>
          </div>
          
          <!-- Image -->
          <div class="aspect-[4/5] rounded overflow-hidden order-1 md:order-2 relative">
            <img src="${heroImage}" alt="Proposal" class="w-full h-full object-cover border border-winter-gray-300" />
            <div class="absolute inset-0 border-2 border-winter-teal-600 m-4"></div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Gift Corner Section -->
    <section class="py-24 px-4 bg-winter-dark-700">
      <div class="max-w-4xl mx-auto text-center">
        <div class="mb-6">
          <svg class="w-10 h-10 mx-auto text-winter-light-300" viewBox="0 0 50 50" fill="none" stroke="currentColor" stroke-width="1">
            <rect x="15" y="20" width="20" height="20" />
            <path d="M15,20 L25,10 L35,20" />
            <line x1="25" y1="10" x2="25" y2="40" />
          </svg>
        </div>
        <h2 class="font-serif text-4xl sm:text-5xl font-light text-winter-light-100 mb-12 tracking-wide">Gift Corner</h2>
        
        <p class="text-base text-winter-light-200 leading-relaxed mb-16 max-w-2xl mx-auto font-light">
          Your presence at our wedding is the greatest gift of all. However, if you wish to honor us with a gift, 
          we would be grateful for contributions toward our future together.
        </p>
        
        <!-- Contact Information -->
        <div class="grid sm:grid-cols-2 gap-8 max-w-2xl mx-auto" id="contacts">
          <div class="border border-winter-gray-400 p-10 bg-transparent">
            <h3 class="font-serif text-winter-light-100 text-2xl mb-6 tracking-wide">Tessy</h3>
            <ul class="space-y-3 text-winter-light-300 text-sm font-light">
              <li>0784 353 885</li>
              <li>0783 388 161</li>
              <li>0781 966 884</li>
            </ul>
          </div>
          
          <div class="border border-winter-gray-400 p-10 bg-transparent">
            <h3 class="font-serif text-winter-light-100 text-2xl mb-6 tracking-wide">Shizzo</h3>
            <ul class="space-y-3 text-winter-light-300 text-sm font-light">
              <li>+1 (317) 386‑7251</li>
              <li>0783 256 693</li>
              <li>0722 638 197</li>
            </ul>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Dress Code Section -->
    <section class="py-24 px-4 bg-winter-light-100">
      <div class="max-w-4xl mx-auto text-center">
        <div class="mb-6">
          <svg class="w-12 h-12 mx-auto text-winter-teal-600" viewBox="0 0 50 50" fill="none" stroke="currentColor" stroke-width="0.8">
            <path d="M25,10 L20,25 L15,40 M25,10 L30,25 L35,40" />
            <path d="M15,40 Q25,35 35,40" />
            <circle cx="25" cy="10" r="3" />
          </svg>
        </div>
        <h2 class="font-serif text-4xl sm:text-5xl font-light text-winter-dark-700 mb-8 tracking-wide">Dress Code</h2>
        <p class="text-base text-winter-dark-600 leading-relaxed max-w-2xl mx-auto font-light mb-12">
          Formal attire requested. Ladies are encouraged to wear elegant dresses, 
          and gentlemen are requested to wear suits or tuxedos.
        </p>
        
        <!-- Color Swatches -->
        <div class="flex justify-center gap-3 mt-12">
          <div class="w-14 h-14 border border-winter-dark-700" style="background-color: #B8E3E9;"></div>
          <div class="w-14 h-14 border border-winter-dark-700" style="background-color: #93B1B5;"></div>
          <div class="w-14 h-14 border border-winter-dark-700" style="background-color: #4F7C82;"></div>
          <div class="w-14 h-14 border border-winter-dark-700" style="background-color: #0B2E33;"></div>
        </div>
      </div>
    </section>
    
    <!-- Footer -->
    <footer class="py-12 text-center bg-winter-dark-800">
      <p class="text-winter-light-300 text-sm font-light tracking-widest">&copy; <span id="year"></span> TESSY &amp; SHIZZO</p>
    </footer>
  </div>
</BaseLayout>

    scroll-behavior: smooth;
  }
  
  /* Enhanced animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  main > section,
  main > aside {
    animation: fadeInUp 0.6s ease-out;
  }
  
  main > aside {
    animation-delay: 0.15s;
  }
</style>
