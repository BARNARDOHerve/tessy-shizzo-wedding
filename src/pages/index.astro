---
import BaseLayout from '../layouts/BaseLayout.astro';
import SuccessCheckmark from '../components/SuccessCheckmark.astro';
import QRCode from '../components/QRCode.astro';

// Use production URL for QR code
// Update this to your custom domain once configured: https://tessy.shizzo.wedding.com/wedding
const weddingUrl = import.meta.env.PROD 
  ? 'https://tessy-shizzo-wedding.vercel.app/wedding'
  : `${Astro.url.origin}/wedding`;
---

<BaseLayout 
  title="Tessy & Shizzo Wedding"
  description="Tessy & Shizzo Wedding Invitation"
>
  <main class="min-h-screen flex items-center justify-center px-4 py-12 md:py-20">
    <div class="max-w-4xl w-full">
      <!-- Hero Section -->
      <section class="text-center space-y-8">
        
        <!-- Success Checkmark Animation -->
        <!--
        <SuccessCheckmark />
        -->
        <!-- Headline -->
        <h1 class="text-5xl md:text-7xl leading-relaxed" style="font-family: 'Great Vibes', cursive; font-weight: 400; line-height: 1.4;">
          <span class="bg-gradient-to-r from-winter-light-300 to-winter-teal-600 bg-clip-text text-transparent block">
            <span class="inline-block">Tessy</span> <span class="inline-block px-2">&</span> <span class="inline-block">Shizzo</span>
          </span>
          <span class="bg-gradient-to-r from-winter-light-300 to-winter-teal-600 bg-clip-text text-transparent block mt-2">
            Invitation!
          </span>
        </h1>
        
        <!-- Intro Text -->
        <div class="space-y-4 text-winter-gray-400 text-lg md:text-xl max-w-xl mx-auto">
          <p class="leading-relaxed">
            Welcome to the Tessy & Shizzo Wedding. Scan here to experience the full story of our celebration and access our digital guest content.
          </p>
          <!--
          <p class="leading-relaxed">
            Bienvenue à la célébration de Tessy et Shizzo. Plongez au cœur de notre histoire en scannant ce code, et accédez à l’espace numérique dédié à nos invités.
          </p>
          -->
        </div>

        <!-- QR Code Section -->
        <div class="pt-8">
          <QRCode url={weddingUrl} size={250} />
        </div>
        
        <!-- Optional: Additional Info -->
        <div class="pt-12 text-sm text-winter-gray-400">
          <p>Fast. Secure. Built for you.</p>
        </div>
        
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  /* Additional mobile-first optimizations */
  @media (max-width: 640px) {
    h1 {
      font-size: 2.5rem;
      line-height: 1.1;
    }
  }
  
  /* Ensure high contrast for accessibility */
  main {
    background-image: url('/images/second.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
  }
  
  main::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(11, 46, 51, 0.75);
    z-index: 0;
  }
  
  main > * {
    position: relative;
    z-index: 1;
  }
  
  /* Enhance button tap target for mobile */
  a {
    -webkit-tap-highlight-color: transparent;
  }
</style>
