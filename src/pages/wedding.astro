---
import BaseLayout from '../layouts/BaseLayout.astro';

// Couple's photo
const heroImage = "https://www.tessyandshizzo.com/us/tessy-yvonne-and-shizzo-ishimwe-jan-2026/photos/158230569";
---

<BaseLayout 
  title="Tessy & Shizzo Wedding - January 10th, 2026"
  description="You are warmly invited to celebrate the union of Kayitesi Yvonne (Tessy) & Ishimwe A. Shizzo on January 10th, 2026."
>
  <div class="min-h-screen relative bg-white">
    
    <!-- Hero Section with Image -->
    <section class="relative h-screen flex items-center justify-center overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0 bg-cover bg-center" style={`background-image: url('${heroImage}');`}>
        <div class="absolute inset-0 bg-black/30"></div>
      </div>
      
      <!-- Hero Content -->
      <div class="relative z-10 text-center text-white px-4">
        <p class="font-serif text-lg sm:text-xl mb-4 tracking-widest uppercase opacity-90">We're Getting Married</p>
        <h1 class="font-serif text-6xl sm:text-7xl lg:text-8xl font-bold mb-6">
          Tessy <span class="text-gold-300">&</span> Shizzo
        </h1>
        <p class="text-xl sm:text-2xl mb-8 font-light">Saturday, January 10th, 2026</p>
        <a href="#details" class="inline-block bg-white text-gray-900 px-10 py-4 font-semibold uppercase tracking-wider hover:bg-gold-500 hover:text-white transition-all duration-300">
          View Details
        </a>
      </div>
      
      <!-- Scroll Indicator -->
      <div class="absolute bottom-10 left-1/2 -translate-x-1/2 text-white animate-bounce">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>
    
    <!-- Our Story Section -->
    <section class="py-20 px-4 bg-sage-50" id="details">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="font-serif text-4xl sm:text-5xl font-semibold text-sage-700 mb-6">How We Met</h2>
        <div class="w-20 h-1 bg-gold-500 mx-auto mb-10"></div>
        
        <!-- Bible Verse -->
        <div class="bg-white border-l-4 border-gold-500 p-8 mb-12 italic text-gray-800 leading-relaxed max-w-2xl mx-auto">
          <p class="text-lg font-light">
            "The man said, 'This is now bone of my bones and flesh of my flesh; she
            shall be called 'woman,' for she was taken out of man.'"
          </p>
          <small class="block mt-4 font-semibold not-italic text-gold-700">Genesis 2:23</small>
        </div>
        
        <!-- Families Introduction -->
        <div class="text-lg text-gray-700 leading-relaxed max-w-3xl mx-auto">
          <p class="mb-6">
            The families of
            <span class="font-semibold text-sage-700">MUKASA Joseph</span> represented by
            <span class="font-semibold text-sage-700">RUGAMBWA Joel</span> and
            <span class="font-semibold text-sage-700">HAKIZIMANA Alex</span> represented by
            <span class="font-semibold text-sage-700">MAOMBI MANIRIHO Ferdinand</span> are delighted
            to invite you to the wedding ceremony of their children:
          </p>
          <p class="font-serif font-semibold text-gold-600 text-2xl sm:text-3xl">
            Kayitesi Yvonne (Tessy) & Ishimwe A. Shizzo
          </p>
        </div>
      </div>
    </section>
    
    <!-- Where & When Section -->
    <section class="py-20 px-4 bg-white">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="font-serif text-4xl sm:text-5xl font-semibold text-sage-700 mb-6">Where To Stay</h2>
          <div class="w-20 h-1 bg-gold-500 mx-auto"></div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Image Placeholder -->
          <div class="aspect-[4/5] bg-sage-100 rounded overflow-hidden">
            <img src="${heroImage}" alt="Venue" class="w-full h-full object-cover" />
          </div>
          
          <!-- Wedding Program -->
          <div>
            <h3 class="font-serif text-3xl font-semibold text-sage-700 mb-8">Wedding Program</h3>
            
            <div class="space-y-6">
              <div class="border-l-4 border-gold-500 pl-6">
                <div class="font-serif font-bold text-gold-600 text-xl mb-2">09:00 AM</div>
                <div class="text-gray-900 font-semibold text-lg mb-1">Introduction and dowry giving</div>
                <div class="text-gray-600">üìç INTARE ARENA (Rusororo)</div>
              </div>
              
              <div class="border-l-4 border-gold-500 pl-6">
                <div class="font-serif font-bold text-gold-600 text-xl mb-2">14:00 PM</div>
