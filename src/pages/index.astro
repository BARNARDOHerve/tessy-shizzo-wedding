---
import BaseLayout from '../layouts/BaseLayout.astro';
import SuccessCheckmark from '../components/SuccessCheckmark.astro';
import QRCode from '../components/QRCode.astro';

// Use production URL for QR code
// Update this to your custom domain once configured: https://tessy.shizzo.wedding.com/wedding
const weddingUrl = import.meta.env.PROD 
  ? 'https://tessy-shizzo-wedding.vercel.app/wedding'
  : `${Astro.url.origin}/wedding`;
---

<BaseLayout 
  title="Tessy & Shizzo Wedding"
  description="Tessy & Shizzo Wedding Invitation"
>
  <main class="min-h-screen flex items-center justify-center px-4 py-12 md:py-20">
    <div class="max-w-4xl w-full">
      <!-- Hero Section -->
      <section class="text-center space-y-8">
        
        <!-- Success Checkmark Animation -->
        <!--
        <SuccessCheckmark />
        -->
        <!-- Headline -->
        <h1 class="text-4xl md:text-6xl font-black leading-tight">
          <span class="bg-gradient-to-r from-neon-green to-electric-blue bg-clip-text text-transparent">
            Tessy & Shizzo Invitation!
          </span>
        </h1>
        
        <!-- Intro Text -->
        <div class="space-y-4 text-gray-300 text-lg md:text-xl max-w-xl mx-auto">
          <p class="leading-relaxed">
            Welcome to the Tessy & Shizzo Wedding. Scan here to experience the full story of our celebration and access our digital guest content.
          </p>
          <!--
          <p class="leading-relaxed">
            Bienvenue à la célébration de Tessy et Shizzo. Plongez au cœur de notre histoire en scannant ce code, et accédez à l’espace numérique dédié à nos invités.
          </p>
          -->
        </div>

        <!-- QR Code Section -->
        <div class="pt-8">
          <QRCode url={weddingUrl} size={250} />
        </div>
        
        <!-- Optional: Additional Info -->
        <div class="pt-12 text-sm text-gray-500">
          <p>Fast. Secure. Built for you.</p>
        </div>
        
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  /* Additional mobile-first optimizations */
  @media (max-width: 640px) {
    h1 {
      font-size: 2.5rem;
      line-height: 1.1;
    }
  }
  
  /* Ensure high contrast for accessibility */
  main {
    background: radial-gradient(ellipse at center, rgba(26, 26, 26, 0.8) 0%, rgba(10, 10, 10, 1) 100%);
  }
  
  /* Enhance button tap target for mobile */
  a {
    -webkit-tap-highlight-color: transparent;
  }
</style>
